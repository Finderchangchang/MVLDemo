<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/img_edit_main_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/img_edit_left_lab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="账号"
            android:textColor="@color/total_deep_lab"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/img_edit_left_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/img_edit_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/img_edit_center_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:paddingLeft="5dp"
                android:textColor="@color/total_shallow_lab"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/img_edit_right_del_img"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/icon_delete" />
        </LinearLayout>
    </LinearLayout>

    <!--android:cursorVisible="false"-->
    <!--android:enabled="false"-->
    <!--android:focusable="false"-->

</LinearLayout>